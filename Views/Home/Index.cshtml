@model IEnumerable<DigitalMatterWebApp.Models.DeviceFirmwareViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
    <h2>Devices and Firmware</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Device ID</th>
                <th>Device Name</th>
                <th>Firmware ID</th>
                <th>Firmware Version</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DeviceID</td>
                    <td>@item.DeviceName</td>
                    <td>@item.FirmwareID</td>
                    <td>@item.FirmwareVersion</td>
                    <td>@item.ReleaseDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
